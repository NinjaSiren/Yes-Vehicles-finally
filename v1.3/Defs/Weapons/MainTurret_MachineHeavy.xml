<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<Vehicles.VehicleTurretDef ParentName="APCMainTurret">
		<defName>YVFAPCMainTurret_MachineHeavy</defName>
		<label>14.5mm Machine Gun</label>
		<weaponType>Rotatable</weaponType>
		<cannonSound>Shot_Minigun</cannonSound>
		
		<projectileSpeed>280</projectileSpeed>
		<reloadTimer>12</reloadTimer>
		<warmUpTimer>1.25</warmUpTimer>
		<magazineCapacity>35</magazineCapacity>
		
		<recoil>
			<distanceTotal>0.2</distanceTotal>
			<distancePerTick>0.1</distancePerTick>
			<speedMultiplierPostRecoil>0.75</speedMultiplierPostRecoil>
		</recoil>
		
		<vehicleRecoil>
			<distanceTotal>0.09</distanceTotal>
			<distancePerTick>0.04</distancePerTick>
			<speedMultiplierPostRecoil>0.19</speedMultiplierPostRecoil>
		</vehicleRecoil>
		
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenShots>5</ticksBetweenShots>
				<ticksBetweenBursts>20</ticksBetweenBursts>
				<spreadRadius>1.35</spreadRadius>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>4</shotsPerBurst>
				<ticksBetweenShots>7</ticksBetweenShots>
				<ticksBetweenBursts>100</ticksBetweenBursts>
				<spreadRadius>1.75</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>4</shotsPerBurst>
				<ticksBetweenShots>7</ticksBetweenShots>
				<ticksBetweenBursts>7</ticksBetweenBursts>
				<spreadRadius>2.75</spreadRadius>
				<label>Full-Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>
		
		<gizmoIconScale>1</gizmoIconScale>
		<rotationSpeed>1.25</rotationSpeed>

		<graphicData>
			<texPath>Weps/Turrets/Infantry_Turret</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<drawSize>8.0</drawSize>
		</graphicData>
		
		<ammunition>
			<categories>
				<li>MachineGunShells</li>
			</categories>
		</ammunition>
		
		<projectileOffset>1</projectileOffset>
		<hitFlags>All</hitFlags>
		<maxRange>50</maxRange>
		<minRange>9</minRange>
	</Vehicles.VehicleTurretDef>
</Defs>